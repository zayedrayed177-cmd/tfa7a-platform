generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  discordId String?  @unique
  username  String
  role      String   @default("USER")
  subs      Subscription[]
}

model Subscription {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  package   String
  server    String
  status    String   @default("نشط")
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
